{
  "name": "@bridgeworks/dev-console-desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.mjs",
  "scripts": {
    "dev": "concurrently -k \"vite --port 5173 --strictPort\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "electron-store": "^9.0.0",
    "react": "19.2.1",
    "react-dom": "19.2.1"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/node": "^20.19.27",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.2.1",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.bridgeworks.devconsole",
    "productName": "BridgeWorks Dev Console",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
