enum UserStatus {
  ACTIVE
  DISABLED
}

model User {
  id     String     @id @default(uuid())
  status UserStatus @default(ACTIVE)

  email           String  @unique
  emailNormalized String  @unique
  displayName     String
  firstName       String?
  lastName        String?
  avatarKey       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([emailNormalized])
  @@map("User")
}
