{
  "name": "bridgeworks-pm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:api": "npm --workspace apps/api run build",
    "start:api": "npm --workspace apps/api run start",
    "build:public": "npm --workspace apps/public run build",
    "start:public": "npm --workspace apps/public run start",
    "build:user": "npm --workspace apps/user run build",
    "start:user": "npm --workspace apps/user run start",
    "build:staff": "npm --workspace apps/staff run build",
    "start:staff": "npm --workspace apps/staff run start",
    "dev:public": "dotenv -e .env.local -- npm -w apps/public run dev -- -p 3100",
    "dev:staff": "dotenv -e .env.local -- npm -w apps/staff run dev -- -p 3101",
    "dev:user": "dotenv -e .env.local -- npm -w apps/user run dev -- -p 3102",
    "dev:api": "dotenv -e .env.local -- cross-env PORT=3103 npm -w apps/api run dev",
    "dev:all": "concurrently -k \"dotenv -e .env.local -- npm -w apps/public run dev -- -p 3100\" \"dotenv -e .env.local -- npm -w apps/staff run dev -- -p 3101\" \"dotenv -e .env.local -- npm -w apps/user run dev -- -p 3102\"",
    "dev:all:with-api": "concurrently -k \"dotenv -e .env.local -- npm -w apps/public run dev -- -p 3100\" \"dotenv -e .env.local -- npm -w apps/staff run dev -- -p 3101\" \"dotenv -e .env.local -- npm -w apps/user run dev -- -p 3102\" \"dotenv -e .env.local -- cross-env PORT=3103 npm -w apps/api run dev\"",
    "db:migrate": "pnpm --dir packages/db exec prisma migrate dev",
    "db:generate": "pnpm --dir packages/db exec prisma generate",
    "db:studio": "pnpm --dir packages/db exec prisma studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jkennanbrower-droid/BridgeWorks-PM.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/jkennanbrower-droid/BridgeWorks-PM/issues"
  },
  "homepage": "https://github.com/jkennanbrower-droid/BridgeWorks-PM#readme",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^11.0.0"
  }
}
