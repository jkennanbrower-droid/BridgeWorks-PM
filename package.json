{
  "name": "bridgeworks-pm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:api": "npm --workspace apps/api run build",
    "start:api": "npm --workspace apps/api run start",
    "build:public": "npm --workspace apps/public run build",
    "start:public": "npm --workspace apps/public run start",
    "build:user": "npm --workspace apps/user run build",
    "start:user": "npm --workspace apps/user run start",
    "build:staff": "npm --workspace apps/staff run build",
    "start:staff": "npm --workspace apps/staff run start",
    "dev:public": "npm -w apps/public run dev",
    "dev:staff": "npm -w apps/staff run dev",
    "dev:user": "npm -w apps/user run dev",
    "dev:api": "npm -w apps/api run dev",
    "dev:all": "concurrently -k 'npm -w apps/public run dev' 'npm -w apps/staff run dev' 'npm -w apps/user run dev' 'npm -w apps/api run dev'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jkennanbrower-droid/BridgeWorks-PM.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/jkennanbrower-droid/BridgeWorks-PM/issues"
  },
  "homepage": "https://github.com/jkennanbrower-droid/BridgeWorks-PM#readme",
  "private": "true",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
